        "type": "object",
        "properties": {
          "advertiser": {
            "$ref": "#/components/schemas/Advertiser"
          },
          "count": {
            "type": "number",
            "description": "the number of clicks registered for this advertiser"
          },
          "successful": {
            "type": "number",
            "description": "number of successful conversions attributed to this advertiser"
          }
        }
      },
